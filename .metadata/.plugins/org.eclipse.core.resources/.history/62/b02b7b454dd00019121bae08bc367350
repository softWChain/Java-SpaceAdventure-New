package pack1;

import java.util.Random;
import java.util.Timer;
import java.util.TimerTask;

public class Astreoid {
	
	Timer timer;
	
	private int temp=0;
	private int temp1=0;
	private int temp2=0;
	Random rand = new Random();
	private int deger;
	
	
	public Astreoid(int temp, int temp1, int temp2) {
		super();
		this.temp = temp;
		this.temp1 = temp1;
		this.temp2 = temp2;
	}


	public Astreoid(){
		

		temp= rand.nextInt(200);
		temp1 =rand.nextInt(300)+70;
		temp2 = rand.nextInt(120)+300;
		
		for(int i=0;i<1;i++){
			Label.astX[i] = +20 + temp;
			Label.astY[i] = -temp -600;
		}
		
		for(int i=1;i<2;i++){
			Label.astX[i] = +20 + temp1;
			Label.astY[i] = -temp1 -1500;
		}
		
		for(int i=2;i<3;i++){
			Label.astX[i] = +20 + temp2;
			Label.astY[i] = -temp2 -5000;
		}
		
		

		
		Label.astHýz[0] = 4;
		Label.astHýz[1] = 6;
		Label.astHýz[2] = 10;
		
	
		timer  = new Timer();
		
		timer.scheduleAtFixedRate(new TimerTask() {
			
			@Override
			public void run() {
				
				

				for(int i=0;i<3;i++){
					if(i == 1){
						deger = rand.nextInt(500);
					}
					
					Label.astY[i]+=Label.astHýz[i];
					Label.astX[i] = temp + deger;
					
					if(Label.astY[i] +20> 500){
						Label.astY[i] = -800;
					}
					
					if(Label.astY[i] +20> 500){
						Label.astY[i] = -3500;
					}
					
					if(Label.astY[i] +20> 500){
						Label.astY[i] = -10000;
					}
					
					System.out.println(Label.astY[2]);
				}
				

				
				
			}
		}, 0, 20);
		
		
	}

}
