package pack1;

import java.util.Random;
import java.util.Timer;
import java.util.TimerTask;

public class Astreoid {
	
	Timer timer;
	
	static int temp=0;
	static int temp1=0;
	static int temp2=0;
	

	
	
	public Astreoid(){
		
		
		for(int i=0;i<1;i++){
			Label.astX[i] = +20 + temp;
			Label.astY[i] = -temp -300;
		}
		
		for(int i=1;i<2;i++){
			Label.astX[i] = +20 + temp1;
			Label.astY[i] = -temp1 -1500;
		}
		
		for(int i=2;i<3;i++){
			Label.astX[i] = +20 + temp2;
			Label.astY[i] = -temp2 -5000;
		}
		
		Label.astHýz[0] = 3;
		Label.astHýz[1] = 8;
		Label.astHýz[2] = 13;
		
	
		timer  = new Timer();
		
		timer.scheduleAtFixedRate(new TimerTask() {
			
			@Override
			public void run() {
				
				
				for(int i=0;i<3;i++){
					
					Label.astY[i]+=Label.astHýz[i];
					
					if(Label.astY[i] +20> 500){
						Label.astY[i] = -800;
					}
					
					if(Label.astY[i] +20> 500){
						Label.astY[i] = -2500;
					}
					
					if(Label.astY[i] +20> 500){
						Label.astY[i] = -10000;
					}
				}
				

				
				
			}
		}, 0, 20);
		
		
	}

}
