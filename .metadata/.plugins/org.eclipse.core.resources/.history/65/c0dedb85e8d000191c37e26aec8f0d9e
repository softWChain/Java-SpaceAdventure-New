package pack1;

import java.util.Random;
import java.util.Timer;
import java.util.TimerTask;

public class Astreoid {
	
	Timer timer;
	
	private int temp=0;
	private int temp1=0;
	private int temp2=0;
	Random rand = new Random();
	private int deger;
	



	public Astreoid(){
		

		temp= rand.nextInt(10);
		temp1 =rand.nextInt(80)+100;
		temp2 = rand.nextInt(60)+300;
		
		
		Label.astX[0] = +20 + temp;
		Label.astY[0] = -temp -600;
		
		
		
		Label.astX[1] = +20 + temp1+150;
		Label.astY[1] = -temp1 -3200;
		
		
		
		Label.astX[2] = +20 + temp2+100;
		Label.astY[2] = -temp2 -4300;
		
		
		

		
		Label.astHýz[0] = 4;
		Label.astHýz[1] = 5;
		Label.astHýz[2] = 9;
		
	
		timer  = new Timer();
		
		timer.scheduleAtFixedRate(new TimerTask() {
			
			@Override
			public void run() {
				
				

				for(int i=0;i<3;i++){
					
					Label.astY[i]+=Label.astHýz[i];
					
					if(Label.astY[0] +20> 500){
						Label.astY[0] = -200;
					}
					
					if(Label.astY[1] +20> 500){
						Label.astY[1] = -2800;
					}
					
					if(Label.astY[2] +20> 500){
						Label.astY[2] = -4100;
					}
					
				}
				

				
				
			}
		}, 0, 20);
		
		
	}

}
